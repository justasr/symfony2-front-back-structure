<ul>
    {% for user in users %}
        <li> {{  user.username }}  </li>
        <li> {{  user.firstname }}  </li>
        <li> {{  user.lastname }}  </li>
        <li>
            <ul>
                {% for review in user.reviews %}
                    <li> {{ review.title }} </li>
                    <li> {{ review.body }} </li>
                {% endfor %}
            </ul>
        </li>
    {% endfor %}
</ul>